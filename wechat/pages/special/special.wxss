/* pages/special/special.wxss */

page {
    background: #f2f2f2;
}

.item {
    background: #fff;
    padding: 24rpx;
    overflow: hidden;
}

.cover {
    width: 200rpx;
    height: 200rpx;
    float: left;
    border-radius: 4rpx;
}

.item .text-info {
    padding-left: 24rpx;
    float: left;
    width: 470rpx;
}

.text-info .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 60rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
}

.text-info .description {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #999;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.text-info .view {
    padding-top: 20rpx;
    overflow: hidden;
}

.text-info .view image {
    float: left;
    width: 40rpx;
    height: 40rpx;
}

.text-info .view text {
    line-height: 40rpx;
    height: 40rpx;
    float: left;
    color: #999;
    font-size: 26rpx;
    padding-left: 12rpx;
}
